@model DSW_CL3_Project.Models.ProductoModel

<div class="row">
    <h4>Producto Seleccionado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdProducto)</dt>
        <dt class="col-sm-10">@Html.DisplayFor(model => model.IdProducto)</dt>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dt class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dt>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DescripcionMarca)</dt>
        <dt class="col-sm-10">@Html.DisplayFor(model => model.DescripcionMarca)</dt>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DescripcionCategoria)</dt>
        <dt class="col-sm-10">@Html.DisplayFor(model => model.DescripcionCategoria)</dt>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Precio)</dt>
        <dt class="col-sm-10">@Html.DisplayFor(model => model.Precio)</dt>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Stock)</dt>
        <dt class="col-sm-10">@Html.DisplayFor(model => model.Stock)</dt>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Activo)</dt>
        <dt class="col-sm-10">@Html.DisplayFor(model => model.Activo)</dt>
    </dl>
</div>

<div>
    @using(Html.BeginForm()){
        @Html.Hidden("codigo", Model.IdProducto)
        <em>Ingrese la Cantidad</em>
        @Html.TextBox("cantidad",1)
        <input type="submit" value"Agregar" class="btn btn-primary" />
        <a asp-action="Carrito" asp-controller="ECommerce" class="btn btn-primary">Ir al Carrito</a>
    }
</div>
<div>@ViewBag.mensaje</div>
